{
  "manifest_version": 3,
  "name": "Ring Light",
  "version": "1.0",
  "description": "A soft, elegant glow around your browser viewport",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ring Light"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
