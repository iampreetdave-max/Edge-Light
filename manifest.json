{
  "manifest_version": 3,
  "name": "Ambient Glow",
  "version": "1.0",
  "description": "Soft warm ambient light glow around browser edges",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ambient Glow"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}